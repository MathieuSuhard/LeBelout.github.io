<%- include('header') %>

<h1>Deck</h1>

<div class="cardsContainer">
  <% cards.forEach( (card) => { %>
    <div class="card">
      <a href="/card/<%= card[0].id%>">
        <img src="/visuals/<%= card[0].visual_name %>" alt="<%= card[0].name %> illustration">
        <p class="cardName"><%= card[0].name %></p>
      </a>
      <a class="link--addCard" title="Enlever du deck" href="/deck/delete/<%= card[0].id %>">[ - ]</a>
    </div>

  <% }) %>
</div>

<%- include('footer') %>